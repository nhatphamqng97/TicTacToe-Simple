<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToe.View.HistoryPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstHistory" ItemsSource="{Binding GetAllHistory}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Details}" Detail="{Binding Date}" TextColor="Black" DetailColor="Silver" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>